<div class="container justify-content-center align-items-center mt-5">
  <div class="mb-5 d-flex justify-content-center">
    <h2><strong>Account Login</strong></h2>
  </div>
  <form action="/" method="POST">
    <div class="row mb-3 justify-content-center">
      <div class="col-sm-6">
        <input type="email" class="form-control" name="email" placeholder="Email" value="{{email}}" />
      </div>
    </div>
    <div class="row mb-3 justify-content-center">
      <div class="col-sm-6">
        <input type="password" class="form-control" name="password" placeholder="Password" value="{{password}}"/>
        {{#if userWrong}}
        <div class="text-end text-danger ms-3">User not found!</div>
        {{/if}}
        {{#if passwordWrong}}<div class="text-end text-danger ms-3">Password wrong!</div>{{/if}}
      </div>
    </div>
    <div class="d-flex justify-content-center">
      <button type="submit" class="btn btn-primary">Log In</button>
    </div>
  </form>
</div>
